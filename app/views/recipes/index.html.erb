<p id="notice"><%= notice %></p>
<div class="nav">
  <%= link_to 'New Recipe', new_recipe_path %>
</div>

<div class="jumbotron p-3 p-md-5 text-white rounded bg-dark">
  <div class="col-md-6 px-0">
    <h1 class="display-4 font-italic">Recipes</h1>
  </div>
</div>

<div class="row">
  <% @recipes.each do |recipe| %>
    <div class="col-md-3 mr-3 mb-3">
      <div class="card card-white bg-white" style="width: 18rem;">
        <div class="card-body">
          <h5 class="card-title text-primary"><%= link_to recipe.title, recipe %></h5>
          <p class="card-text text-dark">Source: <%= recipe.source %></p>
        </div>
        <div class="card-body">
          <%= link_to edit_recipe_path(recipe), class: 'btn btn-outline-secondary' do %>
            <%= icon('fas', 'edit') %>
          <% end %>
          <%= link_to recipe, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-secondary' do %>
            <%= icon('fas', 'trash') %>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>
