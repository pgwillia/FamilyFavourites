    <%= form.label :ingredients %>
    <%= form.text_area :ingredients, id: :recipe_ingredients, class: 'form-control' %>
  </div>

  <div class="field">
    <%= form.label :method %>
    <%= form.text_area :method, id: :recipe_method, class: 'form-control' %>
